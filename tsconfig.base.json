{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".", 
    "noPropertyAccessFromIndexSignature": false,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@eslint.config": [".eslint.config.js"],
      "@mono-agent/tester": ["agents/tester/src/index.ts"],
      "@nodes": ["@mono-agent/types"],
      "@sdk/js": ["agents/sdks/js/src/index.ts"],
      "e2e": ["agents/e2e/src/index.ts"],
      "format": ["pipes/format/src/index.ts"],
      "oidc": ["agents/oidc/src/index.ts"],
      "prompt-template": ["libs/prompt-template/src/index.ts"],
      "sandbox": ["libs/sandbox/src/index.ts"],
      "split": ["pipes/split/src/index.ts"],
      "types": ["tools/types/src/index.ts"],
      "typing": ["utils/typing/src/index.ts"]
    },
    "types": ["bun-types"]
  },
  "exclude": ["node_modules", "tmp"]
}
