{
  "name": "browser",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "agents/browser/src",
  "projectType": "application",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node ./src/cli.js",
        "cwd": "packages/cli"
      }
    },
    "build": {
      "executor": "@nx/js:swc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/agents/browser",
        "tsConfig": "agents/browser/tsconfig.lib.json",
        "packageJson": "agents/browser/package.json",
        "main": "agents/browser/src/index.ts",
        "assets": ["agents/browser/*.md"]
      }
    },
    "build:cli": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/cli/browser",
        "buildLibsFromSource": true,
        "skipTypeCheck": false,
        "configFile": "agents/browser/vite.config.ts",
        "watch": true,
        "generatePackageJson": true,
        "includeDevDependenciesInPackageJson": true
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "build:cli:swc": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx browser build -o=../../dist/agents/browser/ ./src/cli.js",
        "cwd": "agents/browser"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs browser {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {}
    },
    "test-v": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/agents/tester"
      }
    }
  },
  "tags": []
}
