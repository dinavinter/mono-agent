{
  "name": "remix",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/remix",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build-r": {
      "executor": "@nx/remix:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/remix"
      }
    },
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/apps/remix"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "remix:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "remix:build:development"
        },
        "production": {
          "buildTarget": "remix:build:production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "remix:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "remix:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "remix:build:production",
          "hmr": false
        }
      }
    },
    "serve-r": {
      "executor": "@nx/remix:serve",
      "options": {
        "command": "pnpm exec remix-serve build/index.js",
        "manual": true,
        "port": 4200
      }
    },
    "start": {
      "dependsOn": ["build"],
      "command": "remix-serve build/index.js",
      "options": {
        "cwd": "apps/remix"
      }
    },
    "typecheck": {
      "command": "tsc",
      "options": {
        "cwd": "apps/remix"
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "../../coverage/apps/remix"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "remix:build",
        "port": 4200
      }
    }
  }
}
